<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.elliot.trvl">

    <application
        android:name=".TrvlApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.home.HomeActivity"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ie.elliot.trvl.ui.activity.airport_search.AirportSearchActivity"
            android:noHistory="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".ui.activity.airport_confirm.AirportConfirmActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".ui.activity.flight_results.FlightResultsActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".ui.activity.passenger_detail.PassengerDetailActivity"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>